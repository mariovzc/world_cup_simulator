<div class="row group-cnt">
  <%@groups_phase.each do |group| %>
    <div class="col-md-3 col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading text-center">Group <%=group[:group]%></div>
        <table class="table text-center">
          <thead> 
            <tr> 
              <th class="text-center">Position</th> 
              <th class="text-center">Name</th> 
              <th class="text-center">Points</th> 
            </tr>
          </thead>
          <tbody>
            <%group[:teams].each_with_index do |t, index|%>
              <tr> 
                <th scope="row"><%=index%></th> 
                <td><%=t[:team].name%></td> 
                <td><%=t[:points]%></td> 
              </tr>
            <%end%>  
          </tbody>
        </table>
      </div>        
    </div>
  <% end %>
</div>
